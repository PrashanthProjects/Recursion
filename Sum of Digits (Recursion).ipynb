   "source": [
    "def sumofdigits(n):\n",
    "    assert n>=0 and int(n)==n, \"The number should be positive integer only\"\n",
    "    if n==0:\n",
    "        return 0\n",
    "    else:\n",
    "        return int(n%10)+sumofdigits(int(n//10))"
   ]
  },
